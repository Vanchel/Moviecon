<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/margin_small"
    android:foreground="?selectableItemBackground">

    <LinearLayout
        android:layout_width="@dimen/panel_person_item_width"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/image_photo"
            android:layout_width="match_parent"
            android:layout_height="@dimen/panel_person_item_image_height"
            android:background="?colorPrimary"
            android:contentDescription="@string/actors_photo_description"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_round_person_24" />

        <TextView
            android:id="@+id/text_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_small"
            android:ellipsize="end"
            android:lines="2"
            android:paddingHorizontal="@dimen/margin_x_small"
            android:textAppearance="?textAppearanceSubtitle1"
            tools:text="GÃ©rard Depardieu" />

    </LinearLayout>
</androidx.cardview.widget.CardView>